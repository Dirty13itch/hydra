      "name": "Merge",
      "type": "n8n-nodes-base.merge",
      "typeVersion": 3,
      "position": [1000, 500]
    },
    {
      "parameters": {
        "jsCode": "// Log success or failure\nconst input = $input.first();\nconst success = input.json.statusCode === 200 || input.json.id;\n\nreturn [{\n  success,\n  message: success ? 'Memory updated successfully' : 'Memory update failed',\n  response: input.json\n}];"
      },
