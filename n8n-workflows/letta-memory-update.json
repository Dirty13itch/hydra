      "id": "check-source",
      "name": "Check Source",
      "type": "n8n-nodes-base.if",
      "typeVersion": 2,
      "position": [520, 300]
    },
    {
      "parameters": {
        "jsCode": "// Process Alertmanager webhook payload\nconst alerts = $input.first().json.alerts || [];\nconst processedAlerts = [];\n\nfor (const alert of alerts) {\n  const alertText = `[ALERT ${alert.status.toUpperCase()}] ${alert.labels.alertname}\\n` +\n    `Severity: ${alert.labels.severity || 'unknown'}\\n` +\n    `Instance: ${alert.labels.instance || 'unknown'}\\n` +\n    `Summary: ${alert.annotations?.summary || 'No summary'}\\n` +\n    `Time: ${alert.startsAt}\\n` +\n    `---`;\n  \n  processedAlerts.push({\n    text: alertText,\n    alertname: alert.labels.alertname,\n    severity: alert.labels.severity,\n    status: alert.status\n  });\n}\n\nreturn processedAlerts;"
      },
      "id": "process-alerts",
      "name": "Process Alerts",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [760, 200]
    },
    {
      "parameters": {
        "jsCode": "// Process manual/custom memory update\nconst input = $input.first().json;\n\nlet text = '';\nif (input.text) {\n  text = input.text;\n} else if (input.event) {\n  text = `[HYDRA EVENT] ${input.event}\\nDetails: ${JSON.stringify(input.details || {})}\\nTime: ${new Date().toISOString()}`;\n} else {\n  text = `[HYDRA UPDATE] ${JSON.stringify(input)}\\nTime: ${new Date().toISOString()}`;\n}\n\nreturn [{ text }];"
      },
      "id": "process-custom",
      "name": "Process Custom Input",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [760, 400]
    },
    {
      "parameters": {
        "jsCode": "// Scheduled memory consolidation - fetch cluster status and log\nconst timestamp = new Date().toISOString();\n\nreturn [{\n  text: `[SCHEDULED CHECK] Hydra cluster status check at ${timestamp}\\nThis is a periodic memory consolidation entry.`,\n  type: 'scheduled'\n}];"
      },
      "id": "scheduled-check",
      "name": "Scheduled Check",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [520, 500]
    },
    {
      "parameters": {
        "method": "POST",
        "url": "http://192.168.1.244:8283/v1/agents/agent-b3fb1747-1a5b-4c94-b713-11d6403350bf/archival-memory/",
        "sendHeaders": true,
        "headerParameters": {
