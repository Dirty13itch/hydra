# Hydra Stack Environment Variables
# Copy this file to .env and update values
#
# IMPORTANT: Do not commit .env to git!
# These secrets should be migrated to SOPS in production.

# ===========================================
# DATABASE CREDENTIALS
# ===========================================

# PostgreSQL
POSTGRES_PASSWORD=change_me_postgres_password

# Redis
REDIS_PASSWORD=change_me_redis_password

# ===========================================
# AI SERVICES
# ===========================================

# LiteLLM API Gateway
LITELLM_MASTER_KEY=sk-change_me_litellm_master_key
LITELLM_SALT_KEY=change_me_salt_key

# ===========================================
# SEARCH SERVICES
# ===========================================

# Meilisearch (leave empty to disable auth)
MEILISEARCH_KEY=

# ===========================================
# OBSERVABILITY
# ===========================================

# Grafana admin password
GRAFANA_PASSWORD=change_me_grafana

# ===========================================
# CONTENT SERVICES
# ===========================================

# Miniflux RSS Reader
MINIFLUX_USER=admin
MINIFLUX_PASSWORD=change_me_miniflux

# ===========================================
# SECURITY
# ===========================================

# Vaultwarden admin token
VAULTWARDEN_ADMIN_TOKEN=change_me_vaultwarden_admin_token

# ===========================================
# EXTERNAL SERVICES (OPTIONAL)
# ===========================================

# Discord webhook for notifications
DISCORD_WEBHOOK_URL=

# VPN credentials (for Gluetun when enabled)
VPN_SERVICE_PROVIDER=
VPN_USERNAME=
VPN_PASSWORD=
