# Hydra Cluster Secrets Template
#
# Copy this to cluster.yaml and encrypt with SOPS:
#   cp cluster.yaml.template cluster.yaml
#   sops -e -i cluster.yaml
#
# Edit encrypted secrets:
#   sops cluster.yaml
#
# View decrypted:
#   sops -d cluster.yaml

# Database credentials
databases:
  postgresql:
    host: 192.168.1.244
    port: 5432
    user: hydra
    password: CHANGE_ME_postgresql_password
    databases:
      - hydra
      - n8n
      - open_webui
      - letta

  redis:
    host: 192.168.1.244
    port: 6379
    password: CHANGE_ME_redis_password

  qdrant:
    host: 192.168.1.244
    port: 6333
    api_key: ""  # Optional, currently unused

  meilisearch:
    host: 192.168.1.244
    port: 7700
    api_key: CHANGE_ME_meili_master_key

# API keys for services
api_keys:
  litellm:
    master_key: CHANGE_ME_litellm_master_key

  vaultwarden:
    admin_token: CHANGE_ME_vaultwarden_admin_token

  n8n:
    encryption_key: CHANGE_ME_n8n_encryption_key

  home_assistant:
    long_lived_token: CHANGE_ME_ha_token

# External service credentials
external:
  discord:
    webhook_url: https://discord.com/api/webhooks/CHANGE_ME

  # VPN credentials (for Gluetun)
  vpn:
    provider: mullvad
    username: CHANGE_ME_vpn_user
    password: CHANGE_ME_vpn_pass
    wireguard_private_key: CHANGE_ME_wg_key

  # Usenet credentials
  usenet:
    provider: newshosting
    username: CHANGE_ME
    password: CHANGE_ME
    server: news.newshosting.com
    port: 563
    ssl: true

# Tailscale
tailscale:
  auth_key: tskey-auth-CHANGE_ME

# Model download credentials (HuggingFace, etc.)
models:
  huggingface:
    token: hf_CHANGE_ME

# Backup encryption
backup:
  encryption_passphrase: CHANGE_ME_backup_passphrase
